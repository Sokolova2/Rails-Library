= render 'navbar/navbar'
.container.mt-3
  .text-center.current-avatar
    -if current_user.avatar_filename.present?
      = image_tag current_user.avatar.url, class: 'rounded-circle mt-5 mb-4 current-avatar-img'
.container
  %nav
    #nav-tab.nav.nav-tabs{ :role => "tablist" }
      %button#nav-animal-tab.nav-link.active{ "aria-controls" => "nav-animal", "aria-selected" => "true", "data-bs-target" => "#nav-animal", "data-bs-toggle" => "tab", :role => "tab", :type => "button" } Animal
      %button#nav-female-tab.nav-link{ "aria-controls" => "nav-female", "aria-selected" => "false", "data-bs-target" => "#nav-female", "data-bs-toggle" => "tab", :role => "tab", :type => "button" } Women
      %button#nav-male-tab.nav-link{ "aria-controls" => "nav-male", "aria-selected" => "false", "data-bs-target" => "#nav-male", "data-bs-toggle" => "tab", :role => "tab", :type => "button" } Men
      %button#nav-custom-tab.nav-link{ "aria-controls" => "nav-custom", "aria-selected" => "false", "data-bs-target" => "#nav-custom", "data-bs-toggle" => "tab", :role => "tab", :type => "button" } Choose your avatar
    #nav-tabContent.tab-content
      #nav-animal.tab-pane.fade.show.active{ "aria-labelledby" => "nav-animal-tab", :role => "tabpanel" }
        = render partial: 'update_avatar_users/tab_content', locals: { gender: :animal }
      #nav-female.tab-pane.fade{ "aria-labelledby" => "nav-female-tab", :role => "tabpanel" }
        = render partial: 'update_avatar_users/tab_content', locals: { gender: :female }
      #nav-male.tab-pane.fade{ "aria-labelledby" => "nav-male-tab", :role => "tabpanel" }
        = render partial: 'update_avatar_users/tab_content', locals: { gender: :male }
      #nav-custom.tab-pane.fade{ 'aria-labelledby' => 'nav-custom-tab', :role => 'tabpanel' }
        = form_with(model: @user, url: update_avatar_users_path, html: { method: :put }) do |f|
          = f.file_field :avatar, autocomplete: 'avatar', class: 'form-control mt-3'
          = f.submit 'Update Avatar', class: 'btn btn-secondary mt-3'
  .d-flex.justify-content-center.mt-5
    = link_to :back, class: 'h5 ms-5 fs-2' do
      Back