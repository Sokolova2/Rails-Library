.container-form.min-vh-100.d-flex.justify-content-center.align-items-center
  .position-relative
    .d-block.shadow.rounded-4.p-4.mt-5.bg-light.block
      %h2.text-center.mb-4.h6 Forgot your password?
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .mb-3
          .field
            = f.email_field :email, autofocus: true, placeholder: 'email@example.com', autocomplete: "email", class: 'form-control rounded-5'
        .mb-2
          .actions
            = f.submit "Send me", class: 'btn btn-primary w-100 mt-3 text-light rounded-5 btn-authentication'
      .d-flex.justify-content-center
        %p.pe-1 Remember your password?
        = render "devise/shared/links"
    = button_to root_path, method: :get, class: 'btn position-absolute rounded-circle border-0 shadow-sm close-button' do
      %i.bi.bi-x-lg
