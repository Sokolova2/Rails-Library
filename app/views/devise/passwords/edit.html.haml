.bg-dark.min-vh-100
  .container
    .d-flex.justify-content-center
      .d-block.shadow.rounded-5.p-5.mt-5
        %h2.text-center.mb-3.text-light.h2 Change your password
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = render "devise/shared/error_messages", resource: resource
          = f.hidden_field :reset_password_token
          .mb-3
            .field
              = f.label :password, "New password", class: 'form-label text-light'
              - if @minimum_password_length
                %em.text-light
                  (#{@minimum_password_length} characters minimum)
                %br/
              = f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control bg-secondary'
          .mb-3
            .field
              = f.label :password_confirmation, "Confirm new password", class: 'form-label text-light'
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
          .mb-3
            .actions
              = f.submit "Change my password", class: 'btn btn-secondary w-100 mt-3'
        .d-flex.justify-content-center
          %p.pe-1.text-light Remember your password?
          = render "devise/shared/links"
