.container-form.min-vh-100.d-flex.justify-content-center.align-items-center
  .position-relative
    .d-block.shadow.rounded-4.p-4.mt-5.bg-light.block
      %h2.text-center.mb-4.h6  Change your password
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        = f.hidden_field :reset_password_token
        .mb-3
          .field
            = f.password_field :password, placeholder: 'password', autofocus: true, autocomplete: "new-password", class: 'form-control rounded-5'
        .mb-2
          .field
            = f.password_field :password_confirmation, placeholder: 'password confirmation', autocomplete: "new-password", class: 'form-control rounded-5'
        .mb-3
          .actions
            = f.submit "Change my password", class: 'btn btn-primary w-100 mt-3 text-light rounded-5 btn-authentication'
      .d-flex.justify-content-center
        %p.pe-1 Remember your password?
        = render 'devise/shared/links'
    = button_to root_path, method: :get, class: 'btn position-absolute rounded-circle border-0 shadow-sm close-button' do
      %i.bi.bi-x-lg
