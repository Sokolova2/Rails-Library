.container-form.min-vh-100.d-flex.justify-content-center.align-items-center
  .position-relative
    .d-block.shadow.rounded-4.p-4.mt-5.bg-light.block
      %h2.text-center.mb-4.h6 Log in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .mb-3.mt-3
          .field
            = f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: 'email', class: 'form-control rounded-5'
        .mb-1
          .field
            = f.password_field :password,  placeholder: 'Password', autocomplete: 'current-password', class: 'form-control rounded-5'
        .mb-3
          .actions
            = f.submit 'Log in', class: 'btn btn-primary w-100 mt-3 text-light rounded-5 btn-authentication'
        .text-center
          = render 'devise/shared/links_forgot_password'
        .space-oauth.mt-4
          .space
          %span or
          .space
      .d-flex.justify-content-center.mb-3
        = render 'devise/shared/oauth_google'
      .d-flex.justify-content-center.gap-1
        %p Don`t have an account?
        = render 'devise/shared/links'
    = button_to root_path, method: :get,  class: 'btn position-absolute rounded-circle border-0 shadow-sm close-button' do
      %i.bi.bi-x-lg
