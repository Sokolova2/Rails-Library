.bg-dark.min-vh-100
  .container
    .d-flex.justify-content-center
      .d-block.shadow.rounded-5.p-5.mt-5
        %h2.text-center.mb-3.text-light.h2 Log in
        .d-flex.justify-content-center
          = render 'devise/shared/oauth_google', resource: resource, resource_name: resource_name, devise_mapping: devise_mapping
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .mb-3.mt-3
            .field
              = f.label :email, class: 'form-label text-light'
              %br/
              = f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: 'email', class: 'form-control bg-secondary'
          .mb-3
            .field
              = f.label :password, class: 'form-label text-light'
              %br/
              = f.password_field :password,  placeholder: 'Password', autocomplete: 'current-password', class: 'form-control'
            - if devise_mapping.rememberable?
              .mb-3
                .field
                  = f.check_box :remember_me, class: 'bg-secondary'
                  = f.label :remember_me, class: 'form-label text-light'
          .m3.text-end
            = render 'devise/shared/links_forgot_password'
          .mb-3
            .actions
              = f.submit 'Log in', class: 'btn btn-secondary w-100 mt-3'
        .d-flex.justify-content-center
          %p.pe-1.text-light Don`t have an account?
          = render 'devise/shared/links'
