%button.btn.btn-primary{"data-bs-target" => "#exampleModal", "data-bs-toggle" => "modal", :type => "button"}
  Rate
#exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-body
        .d-flex.justify-content-between
          %p Please, rate this book
          .text-end
            %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
        .btn-group.me-2.flexbox-item-4.d-flex.justify-content-center
          .bg-dark.d-flex.rounded-2
            = button_to '1', book_ratings_path(@book), method: :post, params: { score: 1 }, class: 'btn btn-dark'
            = button_to '2', book_ratings_path(@book), method: :post, params: { score: 2 }, class: 'btn btn-dark'
            = button_to '3', book_ratings_path(@book), method: :post, params: { score: 3 }, class: 'btn btn-dark'
            = button_to '4', book_ratings_path(@book), method: :post, params: { score: 4 }, class: 'btn btn-dark'
            = button_to '5', book_ratings_path(@book), method: :post, params: { score: 5 }, class: 'btn btn-dark'

