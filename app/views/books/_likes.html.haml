.d-flex.align-items-center
  - if @book.likes.exists?(user_id: current_user.id)
    = button_to book_like_path(@book), method: :delete, class: 'border-0' do
      %i.bi.bi-heart-fill
  - else
    = button_to book_likes_path(@book), method: :post, class: 'border-0' do
      %i.bi.bi-heart
  %p= "Likes:#{@book.likes.count}"
