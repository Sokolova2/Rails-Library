.d-flex.gap-2.align-items-center
  - if @book.likes.exists?(user_id: current_user.id)
    = button_to book_like_path(@book), method: :delete, class: 'btn btn-outline-dark' do
      %i.bi.bi-heart-fill
  - else
    = button_to book_likes_path(@book), method: :post, class: 'btn btn-outline-dark' do
      %i.bi.bi-heart
  %p.fs-4= "Likes: #{@book.likes.count}"